<html>
    <head>
        <title>Stylist</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    </head>
    <body>
        <div class = "container">
            <h1>{{ stylist.getStylistName }}</h1>

            {% if clients is not empty %}
                <p>Here are the clients for {{ stylist.getStylistName }}:</p>
                <ul>
                    {% for client in clients %}
                        <li>{{ client.getClientName }}</li>
                    {% endfor %}
                </ul>
            {% endif %}

            <h4>Add a client</h4>

            <form action = '/clients' method = 'post'>
                <input id = 'stylist_id' name = 'stylist_id' type = 'hidden' value='{{ stylist.getId() }}'>
                <label for = 'client_name'>Client's Name</label>
                <input id = 'client_name' name = 'client_name' type = 'text'>

                <button type = 'submit'>Add a client!</button>
            </form>
            <form action = 'delete_stylists' method = 'post'>
                <button type = 'submit'>Clear</button>
            </form>

            <p><a href = "/stylists/{{ stylist.getId }}/edit">Edit this stylist</a></p>

            <p><a href='/'>Home</a></p>

        </div>
    </body>
</html>
